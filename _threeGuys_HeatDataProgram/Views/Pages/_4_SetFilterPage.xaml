            <ui:Button x:Name="button_SetFilterApply" Content="적용" Grid.Column="4" Height="50" Width="50" VerticalAlignment="Center" HorizontalAlignment="Center"
/>
        <DataGrid x:Name="listBox_SetFilter" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="5">
